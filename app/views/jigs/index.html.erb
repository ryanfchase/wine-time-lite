<p id="notice"><%= notice %></p>

<h1>Jigs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jigs.each do |jig| %>
      <tr>
        <td><%= jig.name %></td>
        <td><%= jig.body %></td>
        <td><%= link_to 'Show', jig %></td>
        <td><%= link_to 'Edit', edit_jig_path(jig) %></td>
        <td><%= link_to 'Destroy', jig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

